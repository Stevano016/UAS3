# File .htaccess untuk direktori root FoodieVote

# Aktifkan mod_rewrite
RewriteEngine On

# Redirect ke direktori public
RewriteCond %{REQUEST_URI} !^/public/
RewriteRule ^(.*)$ public/$1 [L,QSA]

# Aturan untuk mencegah akses langsung ke direktori sensitif
RewriteRule ^config/.*$ - [F,L]
RewriteRule ^core/.*$ - [F,L]
RewriteRule ^modules/.*$ - [F,L]

# Aturan keamanan tambahan
<Files "database_schema.sql">
    Order Allow,Deny
    Deny from all
</Files>

<Files ~ "^.*\.([Hh][Tt][Aa])">
    Order Allow,Deny
    Deny from all
</Files>

# Set header keamanan
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"